@model IEnumerable<RatingPage.Models.Rating>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center">Rating Page</h1>

@{
    Double avg = 0;
    foreach(var item in Model)
    {
        avg += item.Rate;
    }
    avg /= Model.Count();
    <h2 class="text-center"> Avarage of shown ratings: @Math.Round(avg,2)</h2>
}




<div class="text-center mt-2">
            <p><a asp-action="Create" class="btn btn-block btn-primary btn-warning">Create New</a></p>
</div>

<div class="text-center mt-2">
   <form class="form-inline d-flex justify-content-center md-form form-sm mt-0" asp-action="Search">
        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search" name="query">
        <input class="btn btn-block btn-primary btn-warning ms-2" type="submit" value="Search"></input>
   </form>
</div>



<div class="row">
@foreach (var item in Model)
{
    <div class="col-4">
        <div class="container d-flex justify-content-center mt-5">
            <div class="card text-center mb-5 d-inline-block" style="word-break:break-word">
                <p class="name mt-0 mb-1 fw-500">@item.RaterName</p>
                <small class="text-black-50">@item.SubmissionDate</small>
                <p>@item.Explanation</p>
                <div class="rate bg-success py-3 text-white mt-3">
                    <h6 class="mb-0">Rating Scale</h6>
                    <div class="rating">
                        @for(int i=0;i<@item.Rate;i++)
                        {
                            <label>★</label>
                        }
                    </div>
                    <div class="buttons px-4 mt-0">
                        <a class="btn btn-secondary btn-block rating-submit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary btn-block rating-submit" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-secondary btn-block rating-submit" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
   </div>
}
</div>
